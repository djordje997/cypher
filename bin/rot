#!/usr/bin/env ruby

require_relative '../lib/rot.rb'

def input_required
  puts 'Please enter your text'
  input_text = gets.chomp
  puts 'Please enter number between 0-26'
  input_number = gets.chomp.to_i
  @output = Rot.new(input_number).encrypt(input_text)
end
if ARGV[0] == nil
  input_required
else
  input_number = ARGV[0].to_i
  input_text = ARGV[1]
  @output = Rot.new(input_number).encrypt(input_text)
end
p @output
